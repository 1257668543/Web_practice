<!--index.wxml-->
<map id="map" 
longitude="115.828342" latitude="28.714250" 
markers="{{markers}}"
show-location="true"
scale = '17'
show-location style="width: 100%; height: 100vh;">
  <cover-view class="header">
    <cover-view class="bike">单车</cover-view>
    <cover-view class="ebike">电单车</cover-view>
    <cover-view class="bottom_line"></cover-view>   
  </cover-view>
  <view class="notice_top">
    <view class="notice1">
      骑出运营区域
    </view>
     <view class="notice2">
       <text>助力将自动关闭</text>
       <image class="rightArrow" src="/images/rightArrow.png"/>         
     </view>      
  </view>
  <view class="notice_bottom">
    <image class="bell" src="/images/bell.png"/>  
    <view class="notice3">
    <text>规范骑行，安全常在！</text>
    <image class="right" src="/images/right.png"/>  
    </view>     
  </view>
  <view class="scan">
    <view class="scan1">
      <image class="scaning" src="/images/scan.png"/>
      <text>扫码用车</text>
    </view> 
  </view>        
</map>