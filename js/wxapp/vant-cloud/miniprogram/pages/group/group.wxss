/* 蜗牛样式 */
page{
    height: 100%;
}
.group-body{
    background-color: #f2f2f2;
    width: 100%;
    height: 100%;
    padding: 40rpx 0;
    overflow-x: hidden;
    overflow-y: auto;
    box-sizing: border-box;
}
.public-list{
    width: 90%;
    background-color: #fff;
    margin: 0 auto 20rpx;
    border-radius: 20rpx;
}
.public-header{
    padding: 30rpx 20rpx;
    font-size: 35rpx;
    border-bottom: 5px solid #f2f2f2;
    display: flex;
}
.public-icon{
    margin-right: 18rpx;
}
.public-item {
    border-bottom: .5rpx solid #F2F2F2;
    padding:20rpx 20rpx;
    display:flex;
    justify-content: space-between;
    align-items:center;
  }
  .public-item-right {
    display:flex;
    align-items:center;
  }
  .public-item-name {
    font-size: 30rpx;
    color: #313131;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .load-info {
    font-size: 24rpx;
    color: #313131;
    padding: 20rpx 20rpx;
  }
  /* 配置按钮样式 */
  .btn {
    border: .5rpx solid #eee;
    outline: none;
    background: none;
    color:#444;
    font-size: 30rpx;
    margin-bottom: 20rpx;
    line-height:3;
  }
  .btn-default {
    color: #212529;
    background-color: #e2e6ea;
    border-color: #dae0e5;
  }
  .btn-primary {
    color: #fff;
    background-color: #28a745;
    border-color: #28a745;
  }
  .btn-danger {
    color: #fff;
    background-color: #dc3545;
    border-color: #dc3545;
  }
  .btn::after{ border: none; }
  .creater {
    width:40rpx;
    height:40rpx;
    border-radius:50%;
  }
  